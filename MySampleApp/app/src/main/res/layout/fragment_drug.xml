<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="com.mysampleapp.fragment.DrugFragment">

                <ImageView
                    android:id="@+id/icon_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:transitionName="kittenImage"
                    tools:ignore="ContentDescription,UnusedAttribute"
                    android:src="@drawable/ic_drug_pill"/>

                <TextView
                    android:id="@+id/drug_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASD"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/drug_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASD"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/drug_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASD"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/drug_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASD"
                    android:textSize="25sp"
                    android:textColor="@color/drug_qty"/>

                <TextView
                    android:id="@+id/drug_minqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASD"
                    android:textSize="25sp"
                    android:textColor="@color/drug_minqty"/>

                <TextView
                    android:id="@+id/drug_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:gravity="left"
                    android:text="ASD" />

            </LinearLayout>
</ScrollView>