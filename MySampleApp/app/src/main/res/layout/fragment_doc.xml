<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:background="@drawable/doc_item_shape"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/doc_ic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_icon_doctor"
                    android:id="@+id/doc_icon"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/doc_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doc_ic_layout">
                <TextView
                    android:id="@+id/name_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QWERTY"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_below="@id/name_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QWERTY"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_below="@id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QWERTY"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_below="@id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QWERTY"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <ImageButton android:id="@+id/active_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/phone_number"
                    android:layout_centerVertical="true"
                    android:background="#00ffffff"/>
            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/doc_body"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>